{
	"compilerOptions": {
		"experimentalDecorators": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"pretty": true,
		"target": "es2017",
		"outDir": "dist"
	},
	"include": ["./**/*"],
	"exclude": [
		"node_modules/**/*",
		"test"
	]
}
